
<div class= "container text-align-center">

    <% if @bookings %>
      <h2>Hello <%= current_user.first_name.capitalize%>, your requests</h2>
      <div class="cards">
        <% @bookings.each do |booking| %>

          <div class="card-booking">
          <%= image_tag "art-and-design.svg" %>

          <p class="pencil"> <%= link_to edit_booking_path(booking) do %>
          <i class="fas fa-pencil-alt"></i>
            <% end %> </p>
          <p class="trash"> <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="far fa-trash-alt"> </i>
          <% end %> </p>

            <div class="card-body">
            <h3> My request </h3>
            <p class="card-text"> ðŸ§  Brain of : "<%= booking.brain.name.capitalize %>"</p>
            <p class="card-text"> Starting : <%= booking.start_date.strftime("%d %B %Y")%> - <%= booking.start_date.strftime("%H:%M")%> </p>
            <p class="card-text"> Ending : <%= booking.end_date.strftime("%d %B %Y")%> - <%= booking.end_date.strftime("%H:%M")%> </p>

            <% if booking.status  ==  "accepted" %>
              <p class="card-text">  ðŸ“Œ Status : <%= booking.status %> <i class="fas fa-check accepted"></i> </p>
            <% elsif booking.status ==  "declined" %>
              <p class="card-text">  ðŸ“Œ Status : <%= booking.status %> <i class="far fa-times-circle rejected"></i>  </p>
            <% else  %>
              <p class="card-text">  ðŸ“Œ Status : <%= booking.status %>  </p>
            <% end %>
           </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @brains %>
     <h2> Your pending requests</h2>
      <div class="cards">
       <% @brains.each do |brain| %>
        <% brain.bookings.each do |booking| %>
           <div class="card-booking">
               <%= image_tag "art-and-design.svg" %>
                    <div class="card-body">
                    <h3> New request for <%= brain.name %></h5>
                    <p class="card-text"> ðŸ§  Demandeur: <%= booking.user.first_name.capitalize %> <%= booking.user.last_name.capitalize %>  </p>
                    <p class="card-text"> From <%= booking.start_date.strftime("%d %B %Y")%> Ã  <%= booking.start_date.strftime("%H:%M")%> </p>
                    <p class="card-text"> To <%= booking.end_date.strftime("%d %B %Y")%> Ã  <%= booking.end_date.strftime("%H:%M")%> </p>
                    <p class="yes-button"> <%= link_to accepted_path(booking) do  %>
                      <i class="fas fa-check-circle"> </i>
                    <% end %> </p>
                    <p class="no-button"> <%= link_to declined_path(booking) do %>
                    <i class="fas fa-times-circle"> </i>
                    <% end %> </p>
                    </div>
            </div>
          <% end %>
       <% end %>

        </div>
    <% end %>


</div>





















