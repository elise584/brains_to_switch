<div class="container">
  <div class="row mt-4 justify-content-between">
    <div class="col-7">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><%= @brain.name.capitalize %></h2>
        <% if @brain.photo %>
          <div class="avatar-xtra-large" >
            <%= cl_image_tag @brain.photo.key, height: 100, width: 100, crop: :fill %>
          </div>
        <% else %>
          <div class="avatar-xtre-large">
            <%= image_tag "education.svg", height: 100, width: 100, crop: :fill %>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="d-flex flex-column mb-5">
        <div class="mb-3">
          <p>‚úèÔ∏è <strong>Description: </strong><em><%= @brain.description %></em></p>
          <p>üìå <strong>Adress: </strong><em><%= @brain.address %></em></p>
          <hr>
        </div>
        <div>
          <p>‚ùå <strong>Cancellation policy: </strong><em>You have one day to cancell your reservation, you'll be charged one hour fees per cancellation.</em></p>
        </div>
      </div>
    </div>
    <div class="col-4 check-out-card-show-brain fixed-top">
      <div class="d-flex justify-content-end">
        <p><%= @brain.price %> <strong>‚Ç¨</strong>/hour</p>
      </div>
      <hr>
      <div class="book-brain-show">
        <%= simple_form_for [@user, @brain, @booking] do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {id: "start_date"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {id: "end_date"} %>
          <%= f.submit class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-brain-show" id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
